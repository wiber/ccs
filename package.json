    "self-improve": "node bin/ccs.js run self-bootstrap",
    "learn": "node bin/ccs.js run learn",
    "feedback": "node bin/ccs.js run feedback",
    "prepublishOnly": "npm test && npm run lint",
    "postinstall": "echo 'ðŸŽ‰ ccs installed! Run: ccs setup'"
