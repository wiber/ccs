{
  "name": "ccs",
  "version": "1.0.0",
  "description": "Turn any codebase into an AI-aware environment. Claude launches with full context, asks smart questions, and gets better with every interaction.",
  "main": "lib/index.js",
  "bin": {
    "ccs": "bin/ccs.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:bootstrap": "node bin/test-bootstrap.js",
    "dev": "nodemon bin/ccs.js",
